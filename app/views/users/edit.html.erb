<div class="text-center">
  <h1>編集ページ</h1>
</div>
  
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@post) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        
        <div class="form-group">
            <%= f.label :shop_name, '店舗名' %>
            <%= f.text_field :shop_name, class: 'form-control' %>
        </div>
          
        <div class="form-group">
          <%= f.label :congestion, '混み具合' %>
          <%= f.select :congestion, congestion_values.invert, {}, { class: 'form-control'}S %>
        </div>
        
        <div class="form-group">
        <%= f.label :image, '店舗の写真' %>
        <%= image_tag @post.imagethumb.url if @post.image? %>
        <%= f.file_field :image %>
        <%= f.hidden_field :image_cache %>
      </div>
          
        <%= f.submit '編集を完了する', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>

