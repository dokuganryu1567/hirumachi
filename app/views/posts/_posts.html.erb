<div class="text-center">
  <h1>投稿</h1>
</div>
  
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        
      <%= form_for(@user) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        
        <div class="form-group">
            <%= f.label :shop_name, '店舗名' %>
            <%= f.text_field :shop_name, class: 'form-control' %>
        </div>
          
        <div class="form-group">
          <%= f.label :congestion, '混み具合' %>
          <%= f.select_field :congestion, [["混んでる","混んでる"],["空いてる","空いてる"]], class: 'form-control' %>
        </div>
          
        <%= f.submit '投稿！', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>
<% end %>
<%= paginate posts %>

